{% extends 'base_report.html.twig' %}

{% block title %}{% trans %}Report View{% endtrans %}{% endblock %}

{% block body %}
    <div class="row page-header">
        <h1>{% trans with {'%TITLE%': report_data.displayName} %}Report - %TITLE%{% endtrans %}</h1>
    </div>

    <div class="row">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                {% for col_header in report_data.dataHeader %}
                <th>{{ col_header }}</th>
                {% endfor %}
            </tr>
            </thead>
            <tbody>
            {% for row in report_data.data %}
            <tr>
                {% for col in row %}
                <td>{{ col }}</td>
                {% endfor %}
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
