{% extends 'base.html.twig' %}

{% block title %}{% trans %}Notification Settings{% endtrans %}{% endblock %}

{% block body %}
<div class="container">
    <div class="row page-header">
        <h1>{% trans %}Notification Settings{% endtrans %}</h1>
    </div>

    <form method="post">
        <div class="row">

            <!-- Web -->
            <div class="col-lg-3 col-md-6 col-sm-12">
                <h4><i class="fab fa-internet-explorer"></i> {{ 'Web'|trans }}</h4>
                <div class="form-group">
                    <table>
                        <tr>
                            <td class="bg-warning p-2">
                                {% trans %}Warning{% endtrans %}
                                <input type="text" name="webWarning" placeholder="0 - 100" value="{{ notificationConfig.web.tonerlevel.warning }}" class="form-control form-control-sm" />
                            </td>
                            <td class="bg-danger text-white p-2">
                                {% trans %}Danger{% endtrans %}
                                <input type="text" name="webDanger" placeholder="0 - 100" value="{{ notificationConfig.web.tonerlevel.danger }}" class="form-control form-control-sm" />
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <!--// Web -->

            <!-- E-Mail -->
            <div class="col-lg-3 col-md-6 col-sm-12">
                <h4><i class="fas fa-envelope-open-text"></i> {{ 'E-Mail'|trans }}</h4>
                <div class="form-group">
                    <table>
                        <tr>
                            <td class="bg-warning p-2">
                                {% trans %}Warning{% endtrans %}
                                <input type="text" name="emailWarning" placeholder="0 - 100" value="{{ notificationConfig.email.tonerlevel.warning }}" class="form-control form-control-sm" />
                            </td>
                            <td class="bg-danger text-white p-2">
                                {% trans %}Danger{% endtrans %}
                                <input type="text" name="emailDanger" placeholder="0 - 100" value="{{ notificationConfig.email.tonerlevel.danger }}" class="form-control form-control-sm" />
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <!--// E-Mail -->

            <!-- Slack -->
            <div class="col-lg-3 col-md-6 col-sm-12">
                <h4><i class="fab fa-slack"></i> {{ 'Slack'|trans }}</h4>
                <div class="form-group">
                    <table>
                        <tr>
                            <td class="bg-warning p-2">
                                {% trans %}Warning{% endtrans %}
                                <input type="text" name="slackWarning" placeholder="0 - 100" value="{{ notificationConfig.slack.tonerlevel.warning }}" class="form-control form-control-sm" />
                            </td>
                            <td class="bg-danger text-white p-2">
                                {% trans %}Danger{% endtrans %}
                                <input type="text" name="slackDanger" placeholder="0 - 100" value="{{ notificationConfig.slack.tonerlevel.danger }}" class="form-control form-control-sm" />
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <!--// Slack -->

            <!-- Monitoring -->
            <div class="col-lg-3 col-md-6 col-sm-12">
                <h4><i class="fas fa-tv"></i> {{ "ext. Monitoring"|trans }}</h4>
                <div class="form-group">
                    <table>
                        <tr>
                            <td class="bg-warning p-2">
                                {% trans %}Warning{% endtrans %}
                                <input type="text" name="monitoringWarning" placeholder="0 - 100" value="{{ notificationConfig.monitoring.tonerlevel.warning }}" class="form-control form-control-sm" />
                            </td>
                            <td class="bg-danger text-white p-2">
                                {% trans %}Danger{% endtrans %}
                                <input type="text" name="monitoringDanger" placeholder="0 - 100" value="{{ notificationConfig.monitoring.tonerlevel.danger }}" class="form-control form-control-sm" />
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <!--// Monitoring -->
        </div>

        <div class="row">
            <div class="col">
                <div>
                    <small class="text-muted">{% trans %}* to disable a notification channel set both values to 0{% endtrans %}</small>
                </div>
                <button type="submit" class="btn btn-primary">{{ 'save changes'|trans }}</button>
            </div>
        </div>
    </form>
</div>
{% endblock %}
